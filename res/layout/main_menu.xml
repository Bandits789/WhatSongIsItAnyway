<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/mainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:adjustViewBounds="true"
        android:contentDescription="@+string/mainMenuTitle"
        android:src="@drawable/title" />

    <ImageButton
        android:id="@+id/playGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mainMenuMiscButtons"
        android:layout_below="@+id/mainTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@+string/mainMenuChooseDesc"
        android:maxWidth="230dp"
        android:onClick="playButton"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/play" />

    <LinearLayout
        android:id="@+id/mainMenuMiscButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@+string/mainMenuPlayDesc"
            android:onClick="settingsButton"
            android:paddingRight="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/settings" />

        <ImageButton
            android:id="@+id/highScores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@+string/mainMenuHighDesc"
            android:onClick="highScoreButton"
            android:paddingLeft="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/high_score" />
    </LinearLayout>

</RelativeLayout>